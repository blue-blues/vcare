# ============================================
# HOSPITAL MANAGEMENT SYSTEM - ENVIRONMENT CONFIGURATION
# ============================================
# ⚠️ CRITICAL: NEVER commit .env file to version control
# Copy this file to .env and fill in actual values

# ============================================
# APPLICATION SETTINGS
# ============================================
NODE_ENV=development
PORT=3000
APP_NAME=Hospital Management System
APP_VERSION=1.0.0

# ============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hospital_management
DB_USER=hms_admin
DB_PASSWORD=your_secure_password_here
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECTION_TIMEOUT=30000

# ============================================
# REDIS CONFIGURATION (Cache & Sessions)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# ============================================
# JWT & AUTHENTICATION
# ============================================
JWT_SECRET=your_jwt_secret_key_min_32_chars_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=7d
SESSION_SECRET=your_session_secret_key_here

# ============================================
# ENCRYPTION KEYS (CRITICAL - HIPAA COMPLIANCE)
# ============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
MASTER_ENCRYPTION_KEY=your_master_encryption_key_64_chars_hex
MFA_ENCRYPTION_KEY=your_mfa_encryption_key_64_chars_hex
DATA_ENCRYPTION_KEY=your_data_encryption_key_64_chars_hex

# ============================================
# API GATEWAY
# ============================================
API_GATEWAY_PORT=3000
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX=100
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3002,http://localhost:3003

# ============================================
# MICROSERVICES PORTS
# ============================================
AUTH_SERVICE_PORT=3001
PATIENT_SERVICE_PORT=3002
DOCTOR_SERVICE_PORT=3003
APPOINTMENT_SERVICE_PORT=3004
CONSULTATION_SERVICE_PORT=3005
PRESCRIPTION_SERVICE_PORT=3006
PHARMACY_SERVICE_PORT=3007
LAB_SERVICE_PORT=3008
BILLING_SERVICE_PORT=3009
EMERGENCY_SERVICE_PORT=3010
NOTIFICATION_SERVICE_PORT=3011

# ============================================
# AI SERVICES (OpenAI Integration)
# ============================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7
AI_DIAGNOSIS_SERVICE_PORT=4001
AI_PREDICTION_SERVICE_PORT=4002
AI_NLP_SERVICE_PORT=4003

# ============================================
# EMAIL CONFIGURATION
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@hospital.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=noreply@hospital.com

# ============================================
# SMS CONFIGURATION (Twilio)
# ============================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# FILE STORAGE (AWS S3 or Local)
# ============================================
STORAGE_TYPE=local
# For local storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# For AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=hospital-management-files

# ============================================
# PAYMENT GATEWAY (Stripe)
# ============================================
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs
ENABLE_AUDIT_LOG=true
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# ============================================
# SECURITY SETTINGS
# ============================================
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=900
PASSWORD_MIN_LENGTH=12
REQUIRE_MFA=false
SESSION_TIMEOUT=1800

# ============================================
# CORS SETTINGS
# ============================================
CORS_ENABLED=true
CORS_CREDENTIALS=true

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# BACKUP CONFIGURATION
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups

# ============================================
# HIPAA COMPLIANCE SETTINGS
# ============================================
ENABLE_AUDIT_TRAIL=true
ENABLE_DATA_ENCRYPTION=true
ENABLE_ACCESS_LOGGING=true
DATA_RETENTION_YEARS=7
MINIMUM_NECESSARY_ENFORCEMENT=true

# ============================================
# DEVELOPMENT SETTINGS (Remove in production)
# ============================================
DEBUG_MODE=false
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=false
MOCK_EXTERNAL_APIS=false
